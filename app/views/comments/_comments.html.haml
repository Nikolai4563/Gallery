- @comments.each do |comment|
  .comment-block
    = image_tag comment.commentable.image.url, :class => 'avatar'

    .comment-info
      %span.comment-user
        = t('.comment_by')
        = comment.commentable.name
      %span.comment-date
        = t('.date')
        = comment.created_at.strftime("%d %B %Y %H:%M")
    .comment
      = comment.body
